{
  "name": "@golden-circuit-technologies/halocms-sdk",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": {
    "name": "Brandon Erb",
    "email": "brandom.m.erb@gmail.com"
  },
  "dependencies": {
    "@atomicdesign/atomic-origin": "latest",
    "@atomicdesign/atomic-vue": "latest",
    "@atomicdesign/atomic-singularity": "latest"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:full",
    "build:common": "npm run clean && npm run build:swc",
    "build:swc": "swc ./src -d ./dist/src",
    "build:full": "tsc && tsc-alias"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.92",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/**/*.ts",
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],

  "exports": {
    ".": [
      "./dist/src/*",
      "./dist/src/index.js"
    ],

    "./modules/authentication": "./dist/src/modules/authentication/index.js",
    "./modules/authentication/*": [
      "./dist/src/modules/authentication/*"
    ],

    "./modules/layout": "./dist/src/modules/layout/index.js",
    "./modules/layout/*": [
      "./dist/src/modules/layout/*"
    ]
  }
}
